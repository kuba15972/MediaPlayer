<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ToggleButton
            android:id="@+id/toggleButton_MusicOnOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_MusicOnOff"
            android:textOff="@string/music_off"
            android:textOn="@string/music_on" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="135dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/buttonSoundA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_SoundA"
            android:text="@string/sound_a" />

        <Button
            android:id="@+id/buttonSoundB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_SoundB"
            android:text="@string/sound_b" />

        <Button
            android:id="@+id/buttonSoundC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_SoundC"
            android:text="@string/sound_c" />

    </LinearLayout>





</android.support.constraint.ConstraintLayout>